<p id="notice"><%= notice %></p>

<h1>Listing Designers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Second name</th>
      <th>Photo</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.name %></td>
        <td><%= designer.second_name %></td>
        <td><%= designer.photo %></td>
        <td><%= designer.details %></td>
        <td><%= link_to 'Show', designer %></td>
        <td><%= link_to 'Edit', edit_designer_path(designer) %></td>
        <td><%= link_to 'Destroy', designer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

